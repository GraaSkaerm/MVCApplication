@model MVCApplication.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>SalesPerson</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesPerson.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesPerson.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesPerson.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesPerson.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesPerson.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesPerson.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesPerson.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesPerson.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesPerson.ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesPerson.ZipCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SalesPerson.HireDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalesPerson.HireDate)
        </dd>

        <dt class = "col-sm-2">
            Amount of orders
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Orders.Count)
        </dd>
 
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


<h2></h2>
<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].SalesPersonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPersonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
        </tr>
}
    </tbody>
</table>
